<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        style="@style/headingText"
        android:id="@+id/textViewHeading"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Billing" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"/>

    <TextView
        android:layout_marginTop="10dp"
        style="@style/cardviewtext"
        android:id="@+id/textViewFileNumberDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File Number : ----" />

    <TextView
        android:layout_marginTop="10dp"
        style="@style/cardviewtext"
        android:id="@+id/textViewTotalDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="total : ----" />

    <TextView
        android:layout_marginTop="10dp"
        style="@style/cardviewtext"
        android:id="@+id/textViewPaymentPaidDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paid : ----" />

    <TextView
        android:layout_marginTop="10dp"
        style="@style/cardviewtext"
        android:id="@+id/textViewModeOfPaymentDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mode : ----" />



    <TextView
        android:layout_marginTop="10dp"
        style="@style/cardviewtext"
        android:id="@+id/textViewPaymentLeftDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="paymentleft : ----" />


    <Button
        android:id="@+id/btnConfirmDia"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp"
        android:text="Confirm"
        style="@style/buttonStyle"
        android:background="@drawable/btn_press" />



</LinearLayout>