<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


            <LinearLayout
                android:id="@+id/toplinear"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/back6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/register" />

                <TextView
                    style="@style/toptext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration" />
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayoutSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/textViewHeading"
                                style="@style/headingText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Register new user" />

                            <TextView
                                style="@style/hintText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Only for Doctor's and Secretary " />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/black" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editTextFirstName"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="First Name*"
                                    android:inputType="textPersonName" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editTextlastName"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Last Name*"
                                    android:inputType="textPersonName" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editUsername"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Username*"
                                    android:inputType="textPersonName" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editTextEmail"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Email Address*"
                                    android:inputType="textEmailAddress" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editTextAge"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Age*"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editTextGender"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Gender*"
                                    android:inputType="textPersonName" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                app:passwordToggleEnabled="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editTextPassword"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Password*"
                                    android:inputType="textPassword" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:focusableInTouchMode="true"
                                app:passwordToggleEnabled="true"
                                android:textColorHint="@color/black">

                                <EditText
                                    android:id="@+id/editTextPasswordConfirm"
                                    style="@style/cardviewtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Confirm Password*"
                                    android:inputType="textPassword" />
                            </com.google.android.material.textfield.TextInputLayout>







                            <TextView
                                style="@style/hintText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:text="Fields with * are compulsory" />


                            <Button
                                android:id="@+id/buttonRegister"
                                style="@style/buttonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/btn_press"
                                android:text="Register" />

                            <TextView
                                android:id="@+id/TextViewAlreadyRegistered"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@drawable/text_press"
                                android:textSize="18sp"
                                android:text="Already Registered ? Log in here.."/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
























</LinearLayout>